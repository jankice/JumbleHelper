    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGet"
        android:layout_marginTop="25dp">
        <TableRow>
            <TextView
                android:id="@+id/yourWord"

                android:layout_width="wrap_content"

                android:textSize="25dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/btnGet"/>



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/volume3"
                android:layout_toRightOf="@+id/yourWord"
                android:layout_alignParentLeft="@+id/yourWord"
                android:layout_alignTop="@+id/yourWord"

                />
        </TableRow>
        </TableLayout>


